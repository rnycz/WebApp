@model Magazyn.Models.User
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
@if (TempData["NeedLogin"] != null)
{
    <h4 class="text-warning">@TempData["NeedLogin"]</h4>
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => x.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.UserName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(x => x.Password, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (ViewBag.UserError != null)
                {
                    <p class="text-danger">@ViewBag.UserError</p>
                }
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </div>
    </div>

}

